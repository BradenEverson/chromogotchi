{
  "manifest_version": 3,
  "name": "Chromogotchi",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16x16.png",
      "48": "icons/icon48x48.png",
      "128": "icons/icon128x128.png"
    }
  },
  "permissions": [
    "cookies"
  ],
  "icons": {
    "16": "icons/icon16x16.png",
    "48": "icons/icon48x48.png",
    "128": "icons/icon128x128.png"
  }
}